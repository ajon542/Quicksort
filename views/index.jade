extends layout
block content
    doctype html
    html
      body
        h1 Quicksort
        p
          | Visualization of the Quicksort Algorithm
        div
          form(action='/beginSorting', method='post')
            div(data-role='fieldcontain')
              fieldset(data-role='controlgroup')
                label(for='itemCount') Item Count: 
                input(type="text" name="itemCount")
                input(type="submit" value="Sort")

        canvas( id="draw", resize="true", keepalive="true" )
        script( type="text/paperscript", src="javascripts/draw.js", canvas="draw" )

